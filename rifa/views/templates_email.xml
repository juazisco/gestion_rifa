                <tbody><tr>
                  <td class="content-block">
                    <span class="apple-link">Equipo Organizador</span>
                  </td>
                </tr>
              </tbody></table>
            </div>
            <!-- END FOOTER -->

          </div>
        </td>
        <td>&nbsp;</td>
      </tr>
    </tbody></table>
        ]]>
        </field>
    </record>

